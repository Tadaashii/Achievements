{
  "name": "achievements",
  "version": "1.1.0",
  "description": "Achievements",
  "author": "JokerVerse",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dl-browsers": "cross-env PLAYWRIGHT_BROWSERS_PATH=0 node ./node_modules/playwright-core/cli.js install chromium chromium-headless-shell",
    "dist": "npm run dl-browsers && electron-builder --win --x64"
  },
  "build": {
    "appId": "com.achievements.app",
    "productName": "Achievements",
    "copyright": "Copyright Â© 2025 JokerVerse",
    "asarUnpack": [
      "utils/**",
      "utils/pslist-wrapper.mjs",
      "**/node_modules/screenshot-desktop/**",
      "**/node_modules/playwright/**",
      "**/node_modules/playwright-core/**",
      "**/node_modules/**/.local-browsers/**"
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "icon.ico",
      "main.js",
      "preload.js",
      "index.html",
      "overlay.html",
      "progress.html",
      "playtime.html",
      "playtime-log-watcher.js",
      "style.css",
      "tray-menu.html",
      "tray-menu.js",
      "tray-menu.css",
      "sounds/**/*",
      "presets/**/*",
      "utils/**/*",
      "utils/pslist-wrapper.mjs",
      "assets/**"
    ],
    "extraResources": [
      {
        "from": "sounds",
        "to": "sounds"
      },
      {
        "from": "presets",
        "to": "presets"
      },
      {
        "from": "icon.ico",
        "to": "icon.ico"
      },
      {
        "from": "node_modules/playwright-core/.local-browsers",
        "to": "playwright-browsers"
      }
    ],
    "win": {
      "requestedExecutionLevel": "requireAdministrator",
      "signAndEditExecutable": false,
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Achievements"
    },
    "afterPack": "build/afterPack.js"
  },
  "dependencies": {
    "axios": "^1.12.0",
    "cheerio": "^1.1.2",
    "chokidar": "^4.0.3",
    "crc-32": "^1.2.2",
    "ini": "^4.1.1",
    "jsdom": "^26.1.0",
    "playwright": "^1.55.0",
    "ps-list": "^8.1.1",
    "screenshot-desktop": "^1.15.2",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "electron": "^27.3.11",
    "electron-builder": "^24.13.3",
    "eslint": "^9.35.0",
    "rcedit": "^5.0.2"
  },
  "overrides": {
    "glob": "^9.0.0"
  }
}
